<div class="d-flex h-100">
    {{>appheader}}
    <div class="w-100 ps-0">
        <div class="app-content px-5 pt-4">
            <h1>Edit Opp</h1>
            <hr>
            <h4>Editing: {{title}}</h4>
            <br />
            <div id="form">
              <form action="/app/opps/edit/{{_id}}" method="POST">
                <div class="row mb-2">
                    <div class="col-3">
                        <label for="name">Title *</label>
                    </div>
                    <div class="col">
                        <input class="w-50" type="text" name="title" placeholder="Opportunity Title" value="{{title}}" />
                    </div>
                </div>
                <div class="row mb-2">
                    <div class="col-3">
                        <label for="name">Opened Date *</label>
                    </div>
                    <div class="col">
                        <input class="w-50" type="date" name="openedDate" placeholder="" value="{{openedDateString}}" />
                    </div>
                </div>
                <div class="row mb-2">
                    <div class="col-3">
                        <label for="name">Close Date *</label>
                    </div>
                    <div class="col">
                        <input class="w-50" type="date" name="closeDate" placeholder="" value="{{closeDateString}}" />
                    </div>
                </div>
                <div class="row mb-2">
                    <div class="col-3">
                        <label for="name">Dollar Value *</label>
                    </div>
                    <div class="col">
                        <input class="w-50" type="text" name="dollarValue" placeholder="0" value="{{dollarValue}}"/>
                    </div>
                </div>
                <div class="row mb-2">
                    <div class="col-3">
                        <label for="name">Current Stage *</label>
                    </div>
                    <div class="col">
                        <select class="w-50" type="text" name="currentStage">
                          {{#select currentStage}}
                          <option value="New">New</option>
                          <option value="Discovery">Discovery</option>
                          <option value="Proposal">Proposal</option>
                          <option value="Negotiation">Negotiation</option>
                          <option value="Closed - Won">Closed - Won</option>
                          <option value="Closed - Lost">Closed - Lost</option>
                          {{/select}}
                      </select>
                    </div>
                </div>
                <br />
                <button class="convert-btn" type="submit">Update Opportunity</button>
              </form>
              <br>
              {{#if msg}}
                  <p class="error">{{msg}}</p>
              {{/if}}
          </div>
        </div>
    </div>
</div>