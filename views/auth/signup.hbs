<div class="h-100">
  <div class="container m-0 w-100 h-100">
    <div class="row h-100">
      <div class="col-6 p-0">
        {{> authLogoFiller}}
      </div>
      <div class="col">
        <div id="form" class="w-100 h-100 d-flex justify-content-center align-items-center">
          <div class="auth-form w-75">
            <h2>Signup</h2>
            <br />
            <form action="/signup" method="POST">
              <input type="text" name="username" placeholder="Username *" />
              <br /><br />
              <input type="email" name="email" placeholder="Email *" />
              <br /><br />
              <input type="password" name="password" placeholder="Password *" id="signup-password" />
              <br /><br />
              <input type="password" name="confirmPassword" placeholder="Confirm Password *" id="signup-confirm-password" />
              <br /><br />
              <input type="text" name="firstName" placeholder="First Name *" />
              <br /><br />
              <input type="text" name="lastName" placeholder="Last Name *" />
              <br /><br />
              <input type="text" name="role" placeholder="Role" />
              <br /><br />
              <button type="submit" class="sign-up-btn">Create account</button>
              <br />
              <div class="w-75 d-flex justify-content-center mt-2">
                <a href="/login" class="w-75 link-text">Already have an account? Sign In</a>
              </div>
            </form>
            
          </div>
        </div>
      </div>
    </div>
  </div>

  {{#if msg}}
    <p class="error">{{msg}}</p>
  {{/if}}
</div>