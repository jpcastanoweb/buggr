<div class="d-flex h-100">
    {{>appheader}}
    <div class="w-100 ps-0">
        <div class="app-content px-5 pt-4">
            <div class="d-flex justify-content-start align-items-center">
                <div class="img-wrapper me-3">
                    {{#if currentUser.pictureURL}}
                    <img src="{{currentUser.pictureURL}}" class="image--cover">
                    {{else}}
                    <img src="/images/defaultPicture2.png" class="image--cover">
                    {{/if}}
                </div>
                <div>
                    <h1>My Profile</h1>
                    <span class="me-3"><a class="fs-6" href="/app/myprofile/edit">Edit Profile</a></span>
                </div>
            </div>
            <hr>
            {{#with currentUser}}
            <div class="row">
                <div class="col-2">
                    <p>Username</p>
                </div>
                <div class="col">
                    {{username}}
                </div>
            </div>
            <div class="row">
                <div class="col-2">
                    <p>Email</p>
                </div>
                <div class="col">
                    {{email}}
                </div>
            </div>
            <div class="row">
                <div class="col-2">
                    <p>First Name</p>
                </div>
                <div class="col">
                    {{firstName}}
                </div>
            </div>
            <div class="row">
                <div class="col-2">
                    <p>Last Name</p>
                </div>
                <div class="col">
                    {{lastName}}
                </div>
            </div>
            <div class="row">
                <div class="col-2">
                    <p>Role</p>
                </div>
                <div class="col">
                    {{role}}
                </div>
            </div>
            {{/with}}
        </div>
    </div>
</div>