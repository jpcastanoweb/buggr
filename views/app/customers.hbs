<div class="d-flex h-100">
    {{>appheader}}
    <div class="w-100 ps-0">
        <div class="app-content px-5 pt-4">
            <div class="d-flex justify-content-between align-items-center">
                <h2>Customers</h2>
                <a href="/app/newcustomer">
                    <button class="new-btn">+ New Customer</button>
                </a>
            </div>
            <hr>
            <h5>All Customers</h5>
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="">
                        <tr>
                            <th scope="col">Name</th>
                            <th scope="col">Life Time Rev</th>
                            <th scope="col">Contact Name</th>
                            <th scope="col">Contact Email Address</th>
                            <th scope="col">Contact Phone Number</th>
                            <th scope="col">View</th>
                            <th scope="col">Edit</th>
                            <th scope="col">Delete</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each customers}}
                            <tr>
                                <td>{{name}}</td>
                                <td>TODO</td>
                                <td>{{contactInfo.firstName}} {{contactInfo.lastName}}</td>
                                <td>{{contactInfo.emailAddress}}</td>
                                <td>{{contactInfo.phoneNumber}}</td>
                                <td><a href="/app/customers/{{_id}}">View</a></td>
                                <td><a href="/app/customers/edit/{{_id}}">Edit</a></td>
                                <td><a href="">Delete</a></td>
                            </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>