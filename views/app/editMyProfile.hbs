<div class="d-flex h-100">
    {{>appheader}}
    <div class="w-100 ps-0">
        <div class="app-content px-5 pt-4">
          <h1>Edit Profile </h1>
          <div id="form">
            <form action="/app/myprofile/edit" method="POST" enctype="multipart/form-data">
              <div class="row mb-2">
                  <div class="col-3">
                      <label for="name">Username *</label>
                  </div>
                  <div class="col">
                      <input class="w-50" type="text" name="username" placeholder="Username" value="{{currentUser.username}}"/>
                  </div>
              </div>
              <div class="row mb-2">
                  <div class="col-3">
                      <label for="name">Email *</label>
                  </div>
                  <div class="col">
                      <input class="w-50" type="email" name="email" placeholder="rockstar@ironhack.com" value="{{currentUser.email}}"/>
                  </div>
              </div>
              <div class="row mb-2">
                  <div class="col-3">
                      <label for="name">First Name *</label>
                  </div>
                  <div class="col">
                      <input class="w-50" type="text" name="firstName" placeholder="First Name" value="{{currentUser.firstName}}"/>
                  </div>
              </div>
              <div class="row mb-2">
                  <div class="col-3">
                      <label for="name">Last Name *</label>
                  </div>
                  <div class="col">
                      <input class="w-50" type="text" name="lastName" placeholder="Last Name" value="{{currentUser.lastName}}" />
                  </div>
              </div>
              <div class="row mb-2">
                  <div class="col-3">
                      <label for="name">Role *</label>
                  </div>
                  <div class="col">
                      <input class="w-50" type="text" name="role" placeholder="Role" value="{{currentUser.role}}"/>
                  </div>
              </div>
              <div class="row mb-2">
                  <div class="col-3">
                      <label for="name">Profile Picture</label>
                  </div>
                  <div class="col">
                      <input class="w-50" type="file" name="profilePicture"/>
                  </div>
              </div>
              <br />
              <button type="submit" class="convert-btn">Update Profile</button>
              <br />
              <br />
              {{#if msg}}
                <div class="alert alert-danger" role="alert">
                    {{msg}}
                </div>
              {{/if}}
            </form>
        </div>
    </div>
</div>
